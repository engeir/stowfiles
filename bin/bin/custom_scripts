#!/bin/sh

# Run any of the custom scripts from ~/bin

choises="passwords\npoweroff\nopen pdf\ninspect system\nemojis\nhtml-symbols\nweather\nchange wallpaper\nlayouts\nfind word definition\nfind text\nread QR\nfram status"
chosen=$(echo "$choises" | dmenu -i -l 20 -p "Choose a script to run:")
case "$chosen" in
"change wallpaper") wallpaper ;;
"emojis") emojis ;;
"find text") find_txt ;;
"find word definition") ~/programs/word-lookup/word-lookup.sh ;;
"fram status") fram_job_status ;;
"html-symbols") html-symbols ;;
"inspect system") inspect_system ;;
"layouts") layout ;;
"open pdf") pdf_open_all ;;
"passwords") passmenu ;;
"poweroff") poweroff ;;
"read QR") read_qr ;;
"weather") weather ;;
esac
