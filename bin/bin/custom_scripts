#!/bin/sh

# Run any of the custom scripts from ~/bin

choises="passwords\nfram status\npoweroff\nopen pdf\ninspect system\nemojis\nhtml-symbols\nweather\nchange wallpaper\nlayouts\nfind text\nread QR"
chosen=$(echo "$choises" | dmenu -i -l 20 -p "Choose a script to run:")
case "$chosen" in
"change wallpaper") wallpaper ;;
"emojis") emojis ;;
"html-symbols") html-symbols ;;
"fram status") fram_job_status ;;
"inspect system") inspect_system ;;
"find text") find_txt ;;
"read QR") read_qr ;;
"layouts") layout ;;
    # "open pdf") pdf2 ;;
"open pdf") pdf_open ;;
"passwords") passmenu ;;
"poweroff") poweroff ;;
"weather") weather ;;
esac
