#!/usr/bin/env bash

# The original passmenu script, extended to accept OTP after passmenu-otp and to work on
# Wayland with fuzzel.
#
# passmenu: https://github.com/cdown/passmenu
# passmenu-otp: https://github.com/petrmanek/passmenu-otp
# fuzzel: https://codeberg.org/dnkl/fuzzel

shopt -s nullglob globstar

typeit=0
if [[ $1 == "--type" ]]; then
    typeit=1
    shift
fi

if [[ -n $WAYLAND_DISPLAY ]]; then
    dmenu=(fuzzel -d -w 50 -p "pass: ")
    xdotool="ydotool type --file -"
elif [[ $(uname -s) == "Darwin" ]]; then
    dmenu=(sk)
elif [[ -n $DISPLAY ]]; then
    dmenu=(dmenu -c -nb "#2d2d2d" -nf "#7070c2" -sb "#8c8cd0" -sf "#2d2d2d" -l 20 -fn "CaskaydiaMono Nerd Font:size=14")
    xdotool="xdotool type --clearmodifiers --file -"
else
    echo "Error: No Wayland or X11 display detected" >&2
    exit 1
fi

prefix=${PASSWORD_STORE_DIR-~/.password-store}
password_files=("$prefix"/**/*.gpg)
password_files=("${password_files[@]#"$prefix"/}")
password_files=("${password_files[@]%.gpg}")

password=$(printf '%s\n' "${password_files[@]}" | "${dmenu[@]}" "$@")

[[ -n $password ]] || exit

pass_cmd=show
if pass show "$password" | grep -q '^otpauth://'; then
    pass_cmd=otp
fi

if [[ $typeit -eq 0 ]]; then
    pass "$pass_cmd" -c "$password" 2>/dev/null
else
    pass "$pass_cmd" "$password" | {
        IFS= read -r pass
        printf %s "$pass"
    } | "$xdotool"
fi
