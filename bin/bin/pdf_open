#!/usr/bin/env sh

#
# Search through and open any file matching pattern *.pdf inside directories:
#
DIR1="/home/een023/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded"
DIR2="/home/een023/science/"

echo "$DIR1"

cd ~ || exit 1
c=$(fdfind . -e 'pdf' "$DIR1" "$DIR2" | grep -o ".*pdf$" | awk -F'/' '{print $NF}' | dmenu -i -b -l 20)

# Exit if none is chosen
[ -z "$c" ] && exit

DIR=$(fdfind -H "$c"$ "$DIR1" "$DIR2" | sed 1q)

# Open with default
xdg-open "$DIR"
