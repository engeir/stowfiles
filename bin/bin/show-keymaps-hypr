cat ~/.config/hypr/configs/Keybinds.conf ~/.config/hypr/UserConfigs/UserKeybinds.conf \
    | grep '^bind' \
    | sed 's/\w*//; s/ = //' \
    | awk -F',' '{print $1 $2"£" $3 $4}' \
    | sed 's/^\s//; s/£ exec /£ /' \
    | sort \
    | column -s "£" -t \
    | fzf
