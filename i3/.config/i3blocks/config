[battery]
command=cat /sys/class/power_supply/BAT*/capacity | head -1 | awk '{printf "ðŸ”‹ BAT: %s%%\n", $1}'
interval=30
color=#ffaa00
border=#ffaa00
border_top=0
border_left=0
border_right=0
border_bottom=2

[disk]
command=df -h / | awk 'NR==2{printf "ðŸ’¾ DISK: %s free\n", $4}'
interval=30
color=#ff6666
border=#ff6666
border_top=0
border_left=0
border_right=0
border_bottom=2

[load]
command=uptime | awk -F'load average: ' '{printf "âš¡ CPU: %.2f", $2}'; echo
interval=5
color=#66ff66
border=#66ff66
border_top=0
border_left=0
border_right=0
border_bottom=2

[memory]
command=free -h | awk 'NR==2{printf "ðŸ§  MEM: %s used, %s avail", $3, $7}'; echo
interval=5
color=#cc66ff
border=#cc66ff
border_top=0
border_left=0
border_right=0
border_bottom=2

[time]
command=date '+ðŸ•’ %Y-%m-%d %H:%M:%S'
interval=1
color=#ffffff
