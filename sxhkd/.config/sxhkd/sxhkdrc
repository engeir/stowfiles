
# wm independent hotkeys
#

# terminal emulator
super + Return
	st
	# gnome-terminal

super + b
	firefox

# program launcher
super + @space
	dmenu_run
	# dmenu_run -nb '#000000' -nf "#3CB371" -sb "#3CB371" -fn 3
	#dmenu_run -nb '#000000' -nf "#00008B" -sb "#00008B" -fn 3

super + alt + @space
	~/.config/rofi/launchers/misc/launcher.sh &
# Run custom scripts
super + alt + x
	~/bin/custom_scripts & 
super + alt + p
	~/bin/pdf_open &
	# ~/.config/sxhkd/display.sh
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
# start surf
super + alt + Escape
	tabbed -c surf -e

