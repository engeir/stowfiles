# Some nice defaults from someone else's config.
include extra

set sandbox none

# Clipboard
set selection-clipboard clipboard

# Open file in a viewer that support annotations
map <C-a> feedkeys ":exec okular $FILE<Return>"
# Send document to reMarkable
map <C-s> feedkeys ":exec rmapi put $FILE<Return>"

# Backward search for tex editing
set synctex true
set synctex-editor-command "gvim --remote-silent +%{line} %{input}"

# Transparency (same as #282828 which is set in Xresources)
set default-bg rgba(40,40,40,0.9)

# Colors for inverse mode
# set recolor-lightcolor \#FFFFFF
# set recolor-darkcolor \#FCE9CE
set recolor-keephue 'true'
set recolor-reverse-video 'true'

# https://unix.stackexchange.com/questions/456837/zathura-shortcut-feedkeys-configuration-for-recolouring
# midnight mode
map <F1> focus_inputbar ":set recolor-lightcolor \#002b36"
map <F2> focus_inputbar ":set recolor-darkcolor \#839496"
map ! feedkeys "<F1><Return><F2><Return>"
# amber on dark slate
map <F3> focus_inputbar ":set recolor-lightcolor \#0a0a12"
map <F4> focus_inputbar ":set recolor-darkcolor \#ff9900"
map @ feedkeys "<F3><Return><F4><Return>"
# green on black
map <F5> focus_inputbar ":set recolor-lightcolor \#000000"
map <F6> focus_inputbar ":set recolor-darkcolor \#FCE9CE"
map \# feedkeys "<F6><Return><F7><Return>"
# original (black on white)
map <F7> focus_inputbar ":set recolor-lightcolor \#0f0f0f"
map <F8> focus_inputbar ":set recolor-darkcolor \#f0f0f0"
map $ feedkeys "<F8><Return><F9><Return>"
# transparent
map <F9> focus_inputbar ":set recolor-lightcolor rgba(0,0,0,0)"
map <F10> focus_inputbar ":set recolor-darkcolor \#dac1ba"
map & feedkeys "<F10><Return><F11><Return>"
