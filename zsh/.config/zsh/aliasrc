# Tab-completions CLIs
# alias epynv='eval "$(pyenv init -)"'
# alias epynvv='eval "$(pyenv virtualenv-init -)"'
alias pipcomplete='eval "$(pip completion --zsh)"'
alias buncomplete='[ -s "/home/een023/.bun/_bun" ] && source "/home/een023/.bun/_bun"'

